<Window x:Class="DBClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black"  Margin="120,10,10,10">
            <ScrollViewer>
                <TextBlock x:Name="textBlock" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="startBtn" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="105" Click="startBtn_Click"/>
        <Button x:Name="stopBtn" Content="Stop" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="105" Click="stopBtn_Click"/>
        <Button x:Name="getRecordsBtn_" Content="Get Records" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="105" Click="getRecordsBtn__Click"/>
    </Grid>
</Window>
